<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_lenguage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/principal"
    tools:context="com.example.sakrofdez.androidcurse.SeleccionarLenguaje">


    <ImageButton
        android:layout_width="160dp"
        android:src="@drawable/bandera_italiano"
        android:scaleType="centerCrop"
        android:id="@+id/idiomaItalia"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:src="@drawable/bandera_aleman"
        android:scaleType="centerCrop"
        android:id="@+id/idiomaAleman"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_above="@+id/idiomaItalia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:src="@drawable/bandera_arabe"
        android:id="@+id/idiomaArabe"
        android:scaleType="centerCrop"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:src="@drawable/bandera_frances"
        android:id="@+id/idiomaIFrances"
        android:scaleType="centerCrop"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_above="@+id/idiomaArabe"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:src="@drawable/bandera_ingles"
        android:id="@+id/idiomaIngles"
        android:scaleType="centerCrop"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_above="@+id/idiomaIFrances"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:src="@drawable/bandera_espaniol"
        android:id="@+id/idiomaEspañol"
        android:scaleType="centerCrop"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_above="@+id/idiomaAleman"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/tituloSelIdiEspañol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blanco"
        android:id="@+id/selecIdiom"
        android:gravity="center"
        android:textSize="24sp"
        android:typeface="sans"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ir_atras"
        android:id="@+id/volverAtras"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
